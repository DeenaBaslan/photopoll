<h1>Editing photo</h1>

<% form_for @photo, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    Current Body: <%= image_tag @photo.body.url, :width => 60 %>
  </p>
  <p>
    <%= f.file_field :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @photo %> |
<%= link_to 'Back', photos_path %>