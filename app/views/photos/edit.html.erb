<div class="container">
  <h1>Editing photo <%= @photo.name %></h1>

  <% form_for @photo, :html => { :multipart => true } do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %><br/><br/>

      <%= f.file_field :body %>
    </p>

      <%= f.submit 'Update', :class=>"button blue" %>
  <% end %>
</div>
<div class="container">
  <%= link_to 'Show', @photo %> |
  <%= link_to 'Back', photos_path %>
</div>

<% content_for :right do %>
  <%= image_tag @photo.body.url, :width => 250 %>
<% end %>